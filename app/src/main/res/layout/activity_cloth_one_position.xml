<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="411dp"
    android:layout_height="751dp"
    android:background="#fffafa"
    android:orientation="vertical"
    tools:context=".ActivityClothOnePosition">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#8CF28017">

        <ImageView
            android:id="@+id/imageViewHangerSeven"
            android:layout_width="48dp"
            android:layout_height="45dp"
            android:layout_marginStart="19dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hanger_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:fontFamily="@font/alex_brush"
            android:text="Shape"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewHangerSeven"
            app:layout_constraintStart_toEndOf="@+id/imageViewHangerSeven"
            app:layout_constraintTop_toTopOf="@+id/imageViewHangerSeven" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="23dp"
        android:background="#fffafa"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewClothOneImg"
                    android:layout_width="263dp"
                    android:layout_height="389dp"
                    android:layout_marginStart="70dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/grey_fon" />

                <TextView
                    android:id="@+id/textViewClothOneName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_reg"
                    android:gravity="left"
                    android:letterSpacing=".05"
                    android:text="Название"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewClothOneBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_reg"
                    android:gravity="left"
                    android:letterSpacing=".05"
                    android:text="Бренд: MASHA GORYACHEVA"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewClothOneLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:autoLink="web"
                    android:fontFamily="@font/montserrat_reg"
                    android:gravity="left"
                    android:letterSpacing=".05"
                    android:linksClickable="true"
                    android:text="Сcылка на товар брюки: "
                    android:textColor="@color/black"
                    android:textColorLink="@color/greyDark"
                    android:textSize="20sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="0dp"
        android:background="#8CF28017">

        <ImageButton
            android:id="@+id/imageButtonHomeIconTwo"
            android:layout_width="103dp"
            android:layout_height="65dp"
            android:layout_marginStart="229dp"
            android:layout_marginTop="3dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/home_icon_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/imageButtonClothIconTwo"
            android:layout_width="103dp"
            android:layout_height="65dp"
            android:layout_marginStart="79dp"
            android:layout_marginTop="3dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/cloth_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#8CF28017" />
</LinearLayout>